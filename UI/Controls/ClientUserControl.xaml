<UserControl x:Class="UI.Controls.ClientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Presentation.ViewModels;assembly=Presentation"
             mc:Ignorable="d" 
            d:DesignHeight="100" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance viewModels:ClientViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="{Binding Name , FallbackValue=FallName}" />
        <Label Grid.Column="1" Grid.Row="0" Content="{Binding ContactName, FallbackValue=FallContact}" />
        <Separator Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Button Name="RemoveClientButton" Command="{Binding Remove}" Grid.Column="2" Grid.Row="0" Content="X" Width="20" Height="20" />
    </Grid>
</UserControl>